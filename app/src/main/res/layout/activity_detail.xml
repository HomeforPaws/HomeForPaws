<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agTv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/animalImg"
      android:layout_width="341dp"
      android:layout_height="347dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.486"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/nameTv"
      android:layout_width="141dp"
      android:layout_height="37dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="20dp"
      android:text="고양이1"
      android:textSize="32dp"
      app:layout_constraintEnd_toStartOf="@+id/ag"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/animalImg" />

  <TextView
      android:id="@+id/detail"
      android:layout_width="337dp"
      android:layout_height="176dp"
      android:layout_marginTop="20dp"
      android:text="TextView"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nameTv" />

  <Button
      android:id="@+id/applyBtn"
      android:layout_width="161dp"
      android:layout_height="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="16dp"
      android:text="입양신청"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/sponBtn"
      app:layout_constraintHorizontal_bias="0.918"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/detail"
      app:layout_constraintVertical_bias="0.04" />

  <Button
      android:id="@+id/sponBtn"
      android:layout_width="161dp"
      android:layout_height="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="36dp"
      android:text="후원하기"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/detail"
      app:layout_constraintVertical_bias="0.04" />

  <TextView
      android:id="@+id/ag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="60dp"
      android:text="나이/성별"
      app:layout_constraintEnd_toStartOf="@+id/areaTv"
      app:layout_constraintTop_toBottomOf="@+id/animalImg" />

  <TextView
      android:id="@+id/sp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="11dp"
      android:layout_marginTop="4dp"
      android:text="종"
      app:layout_constraintStart_toEndOf="@+id/nameTv"
      app:layout_constraintTop_toBottomOf="@+id/ag" />

  <TextView
      android:id="@+id/areaTv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="52dp"
      android:text="구조지역"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/animalImg" />
</androidx.constraintlayout.widget.ConstraintLayout>