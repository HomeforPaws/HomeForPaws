<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agTv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/top_view2"
      app:layout_constraintLeft_toLeftOf="parent"
      android:background="#261102">

    <Button
        android:id="@+id/write2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/group_2306"
        />

    <Button
        android:id="@+id/my_page2"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/vector"
        android:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/paw"
        app:layout_constraintEnd_toStartOf="@+id/my_page2"
        app:layout_constraintStart_toEndOf="@+id/write2"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
      android:id="@+id/nameTv"
      android:layout_width="141dp"
      android:layout_height="39dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="4dp"
      android:text="고양이1"
      android:textSize="32dp"
      app:layout_constraintEnd_toStartOf="@+id/ag"
      app:layout_constraintHorizontal_bias="0.076"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/detail"
      android:layout_width="337dp"
      android:layout_height="176dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.459"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nameTv" />

  <Button
      android:id="@+id/applyBtn"
      android:layout_width="161dp"
      android:layout_height="60dp"
      android:layout_marginTop="23dp"
      android:layout_marginEnd="16dp"
      android:text="입양신청"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/sponBtn"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/detail"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/sponBtn"
      android:layout_width="161dp"
      android:layout_height="60dp"
      android:layout_marginTop="23dp"
      android:layout_marginEnd="40dp"
      android:text="후원하기"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/detail"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/ag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:text="나이/성별"
      android:textSize="10dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintLeft_toRightOf="@+id/nameTv"/>

  <TextView
      android:id="@+id/sp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="10dp"
      android:text="종"
      app:layout_constraintStart_toEndOf="@+id/nameTv"
      app:layout_constraintTop_toBottomOf="@+id/ag" />

  <TextView
      android:id="@+id/areaTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="10dp"
      android:text="구조지역"
      app:layout_constraintLeft_toRightOf="@+id/nameTv"
      app:layout_constraintTop_toBottomOf="@+id/sp" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="0dp"
      android:layout_height="300dp"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.471"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/top_view2"
      tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>
